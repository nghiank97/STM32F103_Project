#include "L298.h"

L298::L298(void){
#ifndef DEF_PWM_LIM
	#error "don't define the pwm range"
#endif
}

void  L298::enable(void){
    HAL_GPIO_WritePin(DRV8302_ENA_GPIO_Port, DRV8302_ENA_Pin, GPIO_PIN_SET);
}

void Drv8302::disable(void)
{
	HAL_GPIO_WritePin(DRV8302_ENA_GPIO_Port, DRV8302_ENA_Pin, GPIO_PIN_RESET);
	__HAL_TIM_SET_COMPARE(&htim1, TIM_CHANNEL_1, 0);
	__HAL_TIM_SET_COMPARE(&htim1, TIM_CHANNEL_2, 0);
	__HAL_TIM_SET_COMPARE(&htim1, TIM_CHANNEL_3, 0);
}
