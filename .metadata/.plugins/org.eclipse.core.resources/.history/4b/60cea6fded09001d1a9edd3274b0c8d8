#include "pid.h"

PID::PID(float P, float I , float D, uint16_t limit,float ts)
    : P(P)
    , I(I)
	, D(D)
    , limit(limit)
	, ts(ts)
{
	proportional = 0;
	integral = 0;
	derivative = 0;
	output = 0;
	error_prev = 0;
	integral_prev = 0;
}

float PID::operator() (float error){
	proportional = P * error;
	integral += I*(float)error;

	if (integral < -limit/2){
		integral = -limit/2;
	}
	if (integral > limit/2){
		integral = limit/2;
	}

	derivative = D*(error - error_prev);
	output= proportional + integral + derivative;

	if (output < -limit){
		output = -limit;
	}
	if (output > limit){
		output = limit;
	}

    error_prev = error;
    return output;
}

void PIDController::reset(void){
	proportional = 0;
	integral = 0;
	derivative = 0;
	output = 0;
	error_prev = 0;
	integral_prev = 0;
}

